<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C34A8"
    tools:context=".registerlogin.RegisterActivity">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/purple_200"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/toolbar"
    app:title="@string/app_name"
    app:titleTextColor="@color/black"

    />
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/profile_image_round"
        android:text="Select photo"
        android:textAllCaps="false"
        android:textSize="20sp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/circle_profile_image"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:civ_border_width="1.5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edittext_round_shape_register_login"
        android:hint="Username"
        android:padding="10dp"
        android:layout_margin="30dp"
        android:id="@+id/username_edittext_reg"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/username_edittext_reg"
        app:layout_constraintLeft_toLeftOf="@+id/username_edittext_reg"
        app:layout_constraintRight_toRightOf="@+id/username_edittext_reg"
        android:background="@drawable/edittext_round_shape_register_login"
        android:layout_margin="30dp"
        android:hint="Email"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email_edittext_reg"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_reg"
        app:layout_constraintLeft_toLeftOf="@+id/email_edittext_reg"
        app:layout_constraintRight_toRightOf="@+id/email_edittext_reg"
        android:background="@drawable/edittext_round_shape_register_login"
        android:hint="Password"
        android:padding="10dp"
        android:layout_margin="30dp"
        android:inputType="textPassword"
        android:id="@+id/password_edittext_reg"
        />
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_reg"
        app:layout_constraintRight_toRightOf="@+id/password_edittext_reg"
        app:layout_constraintLeft_toLeftOf="@+id/password_edittext_reg"
        android:layout_margin="40dp"
        android:text="Register"
        android:textAllCaps="false"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textFontWeight="@integer/material_motion_duration_short_1"
        android:background="@drawable/button_round"

        />
    <TextView
        android:id="@+id/textview_already_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/register_button"
        app:layout_constraintLeft_toLeftOf="@+id/register_button"
        app:layout_constraintRight_toRightOf="@+id/register_button"
        android:text="Already have an account ? "
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textStyle="bold"

        />
</androidx.constraintlayout.widget.ConstraintLayout>