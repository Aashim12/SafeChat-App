<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/fromchatimage"
      android:id="@+id/frommessage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="This is my message that will wrap into multiple
 lines and keep going on "
       android:maxWidth="220dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@drawable/edittext_round_shape_register_login"

    />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fromchatimage"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/frommessage"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        />


</androidx.constraintlayout.widget.ConstraintLayout>